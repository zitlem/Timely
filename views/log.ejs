<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Activity Logs - Timely</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        :root {
            --primary-color: #1c1c1c;
            --secondary-color: #111111;
            --success-color: #10b981;
            --warning-color: #f59e0b;
            --danger-color: #ef4444;
            --dark-color: #1f2937;
            --light-color: #f8fafc;
            --border-radius: 16px;
            --shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.5), 0 10px 10px -5px rgba(0, 0, 0, 0.3);
        }

        html {
            overflow-y: auto;
            overflow-x: hidden;
            height: 100%;
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            background-attachment: fixed;
        }

        body {
            min-height: 100vh;
            background: transparent;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            color: var(--light-color);
            padding: 20px;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
        }

        .controls {
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(10px);
            border-radius: var(--border-radius);
            padding: 25px;
            margin-bottom: 25px;
            box-shadow: var(--shadow);
        }

        .filter-row {
            display: flex;
            gap: 12px;
            align-items: center;
            flex-wrap: wrap;
            margin-bottom: 15px;
        }

        .filter-row:last-child {
            margin-bottom: 0;
        }

        .filter-row label {
            font-weight: 600;
            font-size: 0.9rem;
            min-width: 80px;
        }

        .filter-row input[type="text"],
        .filter-row input[type="date"],
        .filter-row select {
            padding: 10px 16px;
            font-size: 0.95rem;
            border: 2px solid rgba(255, 255, 255, 0.1);
            border-radius: 10px;
            background: rgba(0, 0, 0, 0.3);
            color: var(--light-color);
            transition: all 0.3s ease;
            flex: 1;
            min-width: 150px;
        }

        .filter-row input[type="text"]:focus,
        .filter-row input[type="date"]:focus,
        .filter-row select:focus {
            outline: none;
            border-color: var(--success-color);
            background: rgba(0, 0, 0, 0.4);
        }

        .filter-row select {
            cursor: pointer;
            flex: 0 0 auto;
            min-width: 140px;
        }

        .btn {
            padding: 10px 20px;
            font-size: 0.95rem;
            font-weight: 600;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
            white-space: nowrap;
        }

        .btn-primary {
            background: var(--success-color);
            color: white;
        }

        .btn-primary:hover {
            background: #059669;
            transform: translateY(-2px);
            box-shadow: 0 6px 12px rgba(16, 185, 129, 0.3);
        }

        .btn-secondary {
            background: rgba(255, 255, 255, 0.1);
            color: var(--light-color);
        }

        .btn-secondary:hover {
            background: rgba(255, 255, 255, 0.15);
            transform: translateY(-2px);
        }

        .btn-toggle {
            background: rgba(59, 130, 246, 0.3);
            color: var(--light-color);
        }

        .btn-toggle:hover {
            background: rgba(59, 130, 246, 0.4);
        }

        .stats {
            display: flex;
            gap: 15px;
            flex-wrap: wrap;
            align-items: center;
        }

        .stat {
            background: rgba(255, 255, 255, 0.05);
            padding: 12px 20px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .stat-label {
            color: rgba(248, 250, 252, 0.6);
            font-size: 0.85rem;
        }

        .stat-value {
            font-size: 1.2rem;
            font-weight: 700;
            color: var(--success-color);
        }

        .checkbox-container {
            display: flex;
            align-items: center;
            gap: 8px;
            background: rgba(255, 255, 255, 0.05);
            padding: 10px 16px;
            border-radius: 10px;
            cursor: pointer;
        }

        .checkbox-container input[type="checkbox"] {
            cursor: pointer;
            width: 18px;
            height: 18px;
        }

        .checkbox-container label {
            cursor: pointer;
            font-weight: 600;
            font-size: 0.9rem;
            min-width: auto;
        }

        .date-container {
            display: flex;
            gap: 12px;
            align-items: center;
            flex: 1;
        }

        .logs-container {
            background: rgba(255, 255, 255, 0.03);
            backdrop-filter: blur(10px);
            border-radius: var(--border-radius);
            padding: 25px;
            box-shadow: var(--shadow);
            min-height: 400px;
        }

        .log-entry {
            font-family: 'Courier New', Consolas, Monaco, monospace;
            font-size: 0.92rem;
            padding: 11px 14px;
            margin-bottom: 6px;
            background: rgba(0, 0, 0, 0.2);
            border-radius: 8px;
            border-left: 3px solid transparent;
            transition: all 0.2s ease;
            word-wrap: break-word;
            line-height: 1.5;
        }

        .log-entry:hover {
            background: rgba(0, 0, 0, 0.3);
            border-left-color: var(--success-color);
        }

        .log-entry .ip {
            color: #60a5fa;
            font-weight: 600;
        }

        .log-entry .timestamp {
            color: #a78bfa;
        }

        .log-entry .action {
            color: #fbbf24;
        }

        .log-entry .success {
            color: var(--success-color);
        }

        .log-entry .error {
            color: var(--danger-color);
        }

        .empty-state {
            text-align: center;
            padding: 40px;
            color: rgba(248, 250, 252, 0.6);
        }

        .empty-state-icon {
            font-size: 4rem;
            margin-bottom: 20px;
            opacity: 0.3;
        }

        @media (max-width: 768px) {
            .filter-row {
                flex-direction: column;
            }

            .filter-row input[type="text"],
            .filter-row input[type="date"],
            .filter-row select,
            .btn {
                width: 100%;
            }

            .filter-row label {
                min-width: auto;
                width: 100%;
            }

            .logs-container {
                padding: 18px;
            }

            .log-entry {
                font-size: 0.82rem;
                padding: 9px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="controls">
            <!-- Row 1: Primary filters -->
            <div class="filter-row">
                <label for="ipFilter">IP:</label>
                <input
                    type="text"
                    id="ipFilter"
                    placeholder="Filter by IP address..."
                    autocomplete="off"
                >
                <select id="matchType">
                    <option value="contains">Contains</option>
                    <option value="exact">Exact Match</option>
                </select>
                <label for="messageSearch">Search:</label>
                <input
                    type="text"
                    id="messageSearch"
                    placeholder="Search in messages..."
                    autocomplete="off"
                >
                <select id="eventType">
                    <option value="all">All Events</option>
                    <option value="access">Access</option>
                    <option value="timer">Timer</option>
                    <option value="auth">Auth</option>
                    <option value="pause">Pause</option>
                    <option value="reset">Reset</option>
                </select>
            </div>

            <!-- Row 2: Date filters -->
            <div class="filter-row" id="singleDateContainer">
                <button class="btn btn-toggle" onclick="toggleDateMode()">
                    üìÖ Single Date
                </button>
                <label for="singleDate">Date:</label>
                <input
                    type="date"
                    id="singleDate"
                    title="Click to pick or type YYYY-MM-DD">
            </div>

            <div class="filter-row" id="dateRangeContainer" style="display: none;">
                <button class="btn btn-toggle" onclick="toggleDateMode()">
                    üìÖ Date Range
                </button>
                <label for="startDate">From:</label>
                <input
                    type="date"
                    id="startDate"
                    title="Click to pick or type YYYY-MM-DD">
                <label for="endDate">To:</label>
                <input
                    type="date"
                    id="endDate"
                    title="Click to pick or type YYYY-MM-DD">
            </div>

            <!-- Row 3: Actions and stats -->
            <div class="filter-row">
                <button class="btn btn-secondary" onclick="clearFilters()">Clear Filters</button>
                <button class="btn btn-primary" onclick="downloadLogs()">üì• Download</button>
                <div class="checkbox-container" onclick="this.querySelector('input').click()">
                    <input type="checkbox" id="autoRefresh" onchange="toggleAutoRefresh()">
                    <label for="autoRefresh">Auto-refresh (10s)</label>
                </div>
                <div class="stats">
                    <div class="stat">
                        <span class="stat-label">Total:</span>
                        <span class="stat-value" id="totalCount"><%= logs.length %></span>
                    </div>
                    <div class="stat">
                        <span class="stat-label">Showing:</span>
                        <span class="stat-value" id="visibleCount"><%= logs.length %></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="logs-container">
            <% if (logs.length === 0) { %>
                <div class="empty-state">
                    <div class="empty-state-icon">üìù</div>
                    <h2>No logs available</h2>
                    <p>Activity logs will appear here once events are recorded.</p>
                </div>
            <% } else { %>
                <div id="logsDisplay">
                    <% logs.forEach(function(log) { %>
                        <div class="log-entry"
                             data-ip="<%= log.ip %>"
                             data-message="<%= log.message %>"
                             data-event-type="<%= log.eventType %>"
                             data-date="<%= log.date %>"
                             data-full-line="<%= log.fullLine %>">
                            <span class="ip"><%= log.ip %></span> <%= log.message %>
                        </div>
                    <% }); %>
                </div>
            <% } %>
        </div>
    </div>

    <script>
        const ipFilterInput = document.getElementById('ipFilter');
        const matchTypeSelect = document.getElementById('matchType');
        const messageSearchInput = document.getElementById('messageSearch');
        const eventTypeSelect = document.getElementById('eventType');
        const singleDateInput = document.getElementById('singleDate');
        const startDateInput = document.getElementById('startDate');
        const endDateInput = document.getElementById('endDate');
        const logEntries = document.querySelectorAll('.log-entry');
        const visibleCountEl = document.getElementById('visibleCount');

        let refreshInterval = null;
        let refreshPaused = false;
        let resumeTimeout = null;

        // Save filters to localStorage
        function saveFilters() {
            const filters = {
                ip: ipFilterInput.value,
                matchType: matchTypeSelect.value,
                messageSearch: messageSearchInput.value,
                eventType: eventTypeSelect.value,
                singleDate: singleDateInput.value,
                startDate: startDateInput.value,
                endDate: endDateInput.value,
                dateMode: document.getElementById('singleDateContainer').style.display !== 'none' ? 'single' : 'range'
            };
            localStorage.setItem('logFilters', JSON.stringify(filters));
        }

        // Load filters from localStorage
        function loadFilters() {
            const saved = localStorage.getItem('logFilters');
            if (saved) {
                try {
                    const filters = JSON.parse(saved);
                    ipFilterInput.value = filters.ip || '';
                    matchTypeSelect.value = filters.matchType || 'contains';
                    messageSearchInput.value = filters.messageSearch || '';
                    eventTypeSelect.value = filters.eventType || 'all';
                    singleDateInput.value = filters.singleDate || '';
                    startDateInput.value = filters.startDate || '';
                    endDateInput.value = filters.endDate || '';

                    // Restore date mode
                    if (filters.dateMode === 'range') {
                        document.getElementById('singleDateContainer').style.display = 'none';
                        document.getElementById('dateRangeContainer').style.display = 'flex';
                    }
                } catch (e) {
                    console.error('Failed to load filters:', e);
                }
            }
        }

        // Pause auto-refresh while typing
        function pauseRefresh() {
            if (!refreshInterval) return;

            refreshPaused = true;

            // Clear existing resume timeout
            if (resumeTimeout) {
                clearTimeout(resumeTimeout);
            }

            // Resume after 3 seconds of no typing
            resumeTimeout = setTimeout(() => {
                refreshPaused = false;
            }, 3000);
        }

        // Modified filter function that also saves
        function filterLogsAndSave() {
            filterLogs();
            saveFilters();
        }

        // Add event listeners for real-time filtering
        ipFilterInput.addEventListener('input', () => {
            pauseRefresh();
            filterLogsAndSave();
        });
        matchTypeSelect.addEventListener('change', filterLogsAndSave);
        messageSearchInput.addEventListener('input', () => {
            pauseRefresh();
            filterLogsAndSave();
        });
        eventTypeSelect.addEventListener('change', filterLogsAndSave);
        singleDateInput.addEventListener('change', () => {
            pauseRefresh();
            filterLogsAndSave();
        });
        startDateInput.addEventListener('change', () => {
            pauseRefresh();
            filterLogsAndSave();
        });
        endDateInput.addEventListener('change', () => {
            pauseRefresh();
            filterLogsAndSave();
        });

        // Also pause on focus/input for date fields (typing)
        [singleDateInput, startDateInput, endDateInput].forEach(input => {
            input.addEventListener('focus', pauseRefresh);
            input.addEventListener('input', pauseRefresh);
        });

        function filterLogs() {
            const ipFilter = ipFilterInput.value.trim();
            const ipMatchType = matchTypeSelect.value;
            const messageSearch = messageSearchInput.value.trim();
            const eventType = eventTypeSelect.value;

            // Determine date mode based on which container is visible
            const singleContainer = document.getElementById('singleDateContainer');
            const dateMode = singleContainer.style.display !== 'none' ? 'single' : 'range';

            const singleDate = singleDateInput.value;
            const startDate = startDateInput.value;
            const endDate = endDateInput.value;

            let visibleCount = 0;

            logEntries.forEach(entry => {
                let visible = true;

                // IP filter
                if (ipFilter) {
                    const entryIP = entry.dataset.ip;
                    if (ipMatchType === 'exact') {
                        visible = visible && (entryIP === ipFilter);
                    } else {
                        visible = visible && entryIP.toLowerCase().includes(ipFilter.toLowerCase());
                    }
                }

                // Message search
                if (messageSearch) {
                    const message = entry.dataset.message.toLowerCase();
                    visible = visible && message.includes(messageSearch.toLowerCase());
                }

                // Event type filter
                if (eventType !== 'all') {
                    const entryType = entry.dataset.eventType;
                    visible = visible && (entryType === eventType);
                }

                // Date filter
                if (dateMode === 'single' && singleDate) {
                    const entryDate = entry.dataset.date;
                    visible = visible && (entryDate === singleDate);
                } else if (dateMode === 'range') {
                    const entryDate = entry.dataset.date;
                    if (startDate) {
                        visible = visible && (entryDate >= startDate);
                    }
                    if (endDate) {
                        visible = visible && (entryDate <= endDate);
                    }
                }

                entry.style.display = visible ? 'block' : 'none';
                if (visible) visibleCount++;
            });

            updateVisibleCount(visibleCount);
        }

        function updateVisibleCount(count) {
            visibleCountEl.textContent = count;
        }

        function clearFilters() {
            ipFilterInput.value = '';
            matchTypeSelect.value = 'contains';
            messageSearchInput.value = '';
            eventTypeSelect.value = 'all';
            singleDateInput.value = '';
            startDateInput.value = '';
            endDateInput.value = '';

            // Reset to single date mode
            document.getElementById('singleDateContainer').style.display = 'flex';
            document.getElementById('dateRangeContainer').style.display = 'none';

            // Clear saved filters
            localStorage.removeItem('logFilters');

            filterLogs();
        }

        function toggleDateMode() {
            const singleContainer = document.getElementById('singleDateContainer');
            const rangeContainer = document.getElementById('dateRangeContainer');

            // Check current state
            const isCurrentlySingle = singleContainer.style.display !== 'none';

            // Toggle visibility
            if (isCurrentlySingle) {
                singleContainer.style.display = 'none';
                rangeContainer.style.display = 'flex';
            } else {
                singleContainer.style.display = 'flex';
                rangeContainer.style.display = 'none';
            }

            saveFilters();
            filterLogs();
        }

        function downloadLogs() {
            const visibleLogs = Array.from(logEntries)
                .filter(entry => entry.style.display !== 'none')
                .map(entry => entry.dataset.fullLine)
                .join('\n');

            if (!visibleLogs) {
                alert('No logs to download');
                return;
            }

            const blob = new Blob([visibleLogs], { type: 'text/plain' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `timely-logs-${new Date().toISOString().split('T')[0]}.txt`;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            URL.revokeObjectURL(url);
        }

        function toggleAutoRefresh() {
            const checkbox = document.getElementById('autoRefresh');

            // Save state to localStorage
            localStorage.setItem('logAutoRefresh', checkbox.checked);

            if (checkbox.checked) {
                // Refresh every 10 seconds, but only if not paused
                refreshInterval = setInterval(() => {
                    if (!refreshPaused) {
                        window.location.reload();
                    }
                }, 10000);
            } else {
                if (refreshInterval) {
                    clearInterval(refreshInterval);
                    refreshInterval = null;
                }
            }
        }

        // Add syntax highlighting to log messages
        document.addEventListener('DOMContentLoaded', function() {
            // Load saved filters first
            loadFilters();

            // Apply filters after loading
            filterLogs();

            // Restore auto-refresh state from localStorage
            const savedAutoRefresh = localStorage.getItem('logAutoRefresh');
            if (savedAutoRefresh === 'true') {
                const checkbox = document.getElementById('autoRefresh');
                checkbox.checked = true;
                toggleAutoRefresh();
            }

            // Add syntax highlighting
            logEntries.forEach(entry => {
                let html = entry.innerHTML;

                // Highlight timestamps (looks for "on Month Day Year HH:MM:SS")
                html = html.replace(/(on [A-Z][a-z]+ \d+(?:st|nd|rd|th)? \d{4} \d{2}:\d{2}:\d{2})/g,
                    '<span class="timestamp">$1</span>');

                // Highlight actions
                html = html.replace(/(accessed|set a|started|paused|reset|authenticated|failed)/gi,
                    '<span class="action">$1</span>');

                // Highlight success indicators
                html = html.replace(/(authenticated successfully|\(authenticated\))/gi,
                    '<span class="success">$1</span>');

                // Highlight errors
                html = html.replace(/(failed authentication|\(unauthenticated\))/gi,
                    '<span class="error">$1</span>');

                entry.innerHTML = html;
            });
        });

        // Stop checkbox click from toggling twice
        document.querySelector('.checkbox-container').addEventListener('click', function(e) {
            if (e.target.tagName !== 'INPUT') {
                e.preventDefault();
            }
        });
    </script>
</body>
</html>
