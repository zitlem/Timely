        function updateControlUrl() {
            const transparentBg = document.getElementById('controlTransparentBg').checked;
            const bgType = document.getElementById('controlBgType').value;

            let url = '/control';
            const params = [];

            if (transparentBg) {
                params.push('transparent-bg=true');
            } else {
                let bgValue = '';

                if (bgType === 'gradient') {
                    const color1 = document.getElementById('controlGradColor1Text').value || '#1c1c1c';
                    const color2 = document.getElementById('controlGradColor2Text').value || '#111111';
                    bgValue = `linear-gradient(135deg, ${color1} 0%, ${color2} 100%)`;
                } else if (bgType === 'solid') {
                    bgValue = document.getElementById('controlBgColorText').value || '#1c1c1c';
                } else if (bgType === 'custom') {
                    bgValue = document.getElementById('controlCustomBg').value || '';
                }

                if (bgValue) {
                    params.push(`background=${encodeURIComponent(bgValue)}`);
                }
            }

            if (params.length > 0) {
                url += '?' + params.join('&');
            }

            document.getElementById('generatedControlUrl').textContent = url;

            // Update live preview
            document.getElementById('controlPreview').src = url;
        }

