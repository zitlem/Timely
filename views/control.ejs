    <div class="notification" id="notification"></div>

    <script>
        const statusTime = document.getElementById('statusTime');
        const statusInfo = document.getElementById('statusInfo');
        const notification = document.getElementById('notification');
        const currentTimeDisplay = document.getElementById('currentTime');
        const clockFormatBtn = document.getElementById('clockFormatBtn');

        // Local timer state for smooth countdown
        let timerState = {
            running: false,
            paused: false,
            remaining: 0,
            localStartTime: null,
            localRemaining: 0,
            countingUp: false,
            isTargetMode: false
        };

        let currentMode = 'duration'; // 'duration' or 'target'

        // Load clock format preference from localStorage
        let is24HourFormat = localStorage.getItem('clockFormat24Hour') !== 'false'; // Default to true

        function formatTime(totalSeconds) {
            const isNegative = totalSeconds < 0;
            const absSeconds = Math.abs(totalSeconds);
            const hours = Math.floor(absSeconds / 3600);
            const minutes = Math.floor((absSeconds % 3600) / 60);
            const seconds = Math.floor(absSeconds % 60);

            const prefix = isNegative ? '+' : '';
            return prefix + String(hours).padStart(2, '0') + ':' +
                   String(minutes).padStart(2, '0') + ':' +
                   String(seconds).padStart(2, '0');
        }

function updateLocalTimer() {
            if (timerState.running && timerState.localStartTime) {
                const elapsed = (Date.now() - timerState.localStartTime) / 1000;
                const newRemaining = timerState.remaining - elapsed;

                // Allow negative values when counting up
                if (timerState.countingUp || newRemaining >= 0) {
                    timerState.localRemaining = newRemaining;
                } else {
                    timerState.localRemaining = 0;
                    if (!timerState.countingUp) {
                        timerState.running = false;
                    }
                }
            }
        }

        function updateDisplay() {
            updateLocalTimer();

            // Use local calculated time for smooth countdown
            let displayTime = timerState.running ? timerState.localRemaining : timerState.remaining;

            // When counting up, allow negative values; otherwise clamp to 0
            if (!timerState.countingUp) {
                displayTime = Math.max(0, displayTime);
            }

            // Use Math.floor to match timer.ejs
            statusTime.textContent = formatTime(Math.floor(displayTime));
        }
        
        function showNotification(message, type = 'success') {
            notification.textContent = message;
            notification.className = `notification ${type}`;
            notification.classList.add('show');
            
            setTimeout(() => {
                notification.classList.remove('show');
            }, 3000);
        }
        
        function setMode(mode) {
            currentMode = mode;
            const durationSection = document.getElementById('durationSection');
            const targetSection = document.getElementById('targetSection');
            const durationModeBtn = document.getElementById('durationModeBtn');
            const targetModeBtn = document.getElementById('targetModeBtn');

            if (mode === 'duration') {
                durationSection.style.display = 'block';
                targetSection.style.display = 'none';
                durationModeBtn.classList.add('active');
                targetModeBtn.classList.remove('active');
            } else {
                durationSection.style.display = 'none';
                targetSection.style.display = 'block';
                durationModeBtn.classList.remove('active');
                targetModeBtn.classList.add('active');

                // Set default target time to 15 minutes from now if empty
                const targetDateInput = document.getElementById('targetDate');
                const targetHourInput = document.getElementById('targetHour');
                const targetMinuteInput = document.getElementById('targetMinute');
                const targetAmPmInput = document.getElementById('targetAmPm');

                if (!targetDateInput.value) {
                    const now = new Date();
                    now.setMinutes(now.getMinutes() + 15);

                    // Format date
                    const year = now.getFullYear();
                    const month = String(now.getMonth() + 1).padStart(2, '0');
                    const day = String(now.getDate()).padStart(2, '0');
                    targetDateInput.value = `${year}-${month}-${day}`;

                    // Format time based on 12/24 hour format
                    let hours = now.getHours();
                    const minutes = now.getMinutes();

                    if (is24HourFormat) {
                        targetHourInput.value = hours;
                        targetHourInput.max = 23;
                        targetMinuteInput.value = minutes;
                    } else {
                        // Convert to 12-hour format
                        const ampm = hours >= 12 ? 'PM' : 'AM';
                        hours = hours % 12;
                        hours = hours ? hours : 12; // Convert 0 to 12
                        targetHourInput.value = hours;
                        targetHourInput.max = 12;
                        targetHourInput.min = 1;
                        targetMinuteInput.value = minutes;
                        targetAmPmInput.value = ampm;
                    }
                }

                // Update hour input range and AM/PM visibility based on format
                updateTargetTimeFormat();
            }
        }

        function setPreset(hours, minutes, seconds) {
            // Switch to duration mode when using presets
            setMode('duration');

            document.getElementById('hours').value = hours;
            document.getElementById('minutes').value = minutes;
            document.getElementById('seconds').value = seconds;

            // Visual feedback
            const presetText = hours > 0 ? `${hours}h` : `${minutes}m`;
            showNotification(`Set to ${presetText}`, 'success');
        }
        
        function updateStatus() {
            fetch('/api/status', {
                headers: {
                    'X-Client-Type': 'control-panel'
                }
            })
                .then(response => {
                    if (response.status === 403) {
                        // Not authenticated - shouldn't happen if page loaded correctly
                        statusInfo.textContent = 'Not Authenticated';
                        statusTime.textContent = '--:--:--';
                        return;
                    }
                    return response.json();
                })
                .then(data => {
                    if (!data) return; // Handle 403 case

                    const clientTime = Date.now();
                    const oldRunning = timerState.running;

                    // Update timer state from server
                    timerState.running = data.running;
                    timerState.paused = data.paused;
                    timerState.countingUp = data.countingUp !== undefined ? data.countingUp : timerState.countingUp;
                    timerState.isTargetMode = data.isTargetMode !== undefined ? data.isTargetMode : timerState.isTargetMode;

// Sync logic
                    if (!oldRunning && data.running) {
                        // Timer just started, initialize local timer
                        timerState.remaining = data.remaining;
                        timerState.localRemaining = data.remaining;
                        timerState.localStartTime = clientTime;
                    } else if (data.running) {
                        // Timer running, resync with server time
                        // Update remaining to server value and reset local start time
                        timerState.remaining = data.remaining;
                        timerState.localRemaining = data.remaining;
                        timerState.localStartTime = clientTime; // Reset reference point on each sync
                    } else {
                        // Not running, use server data directly
                        timerState.remaining = data.remaining;
                        timerState.localRemaining = data.remaining;
                        timerState.localStartTime = null;
                    }

                    statusInfo.className = 'status-info';

                    if (data.running) {
                        statusInfo.textContent = 'Running';
                        statusInfo.classList.add('running');
                    } else if (data.paused) {
                        statusInfo.textContent = 'Paused';
                        statusInfo.classList.add('paused');
                    } else {
                        statusInfo.textContent = 'Ready';
                    }

                    // Update display immediately after syncing
                    updateDisplay();
                })
                .catch(error => {
                    //console.error('Error fetching status:', error);
                    statusInfo.textContent = 'Connection Error';
                });
        }
        
        function startTimer() {
            let requestBody = {};
            let notificationMessage = '';

            // Control panel always counts up - this is just for control panel behavior
            // The actual timer display uses the ?stop-at-zero URL parameter
            const countingUp = true;

            if (currentMode === 'duration') {
                const hours = parseInt(document.getElementById('hours').value) || 0;
                const minutes = parseInt(document.getElementById('minutes').value) || 0;
                const seconds = parseInt(document.getElementById('seconds').value) || 0;

                if (hours === 0 && minutes === 0 && seconds === 0) {
                    showNotification('Please set a time greater than 0', 'error');
                    return;
                }

                requestBody = {
                    hours: hours,
                    minutes: minutes,
                    seconds: seconds,
                    countingUp: countingUp
                };

                const totalTime = hours * 3600 + minutes * 60 + seconds;
                const timeText = formatTime(totalTime);
                notificationMessage = `Timer started: ${timeText}`;
            } else {
                // Target time mode
                const targetDate = document.getElementById('targetDate').value;
                let targetHour = parseInt(document.getElementById('targetHour').value);
                const targetMinute = parseInt(document.getElementById('targetMinute').value);

                if (!targetDate) {
                    showNotification('Please select a target date', 'error');
                    return;
                }

                // Convert to 24-hour format if in 12-hour mode
                if (!is24HourFormat) {
                    const ampm = document.getElementById('targetAmPm').value;
                    if (ampm === 'PM' && targetHour !== 12) {
                        targetHour += 12;
                    } else if (ampm === 'AM' && targetHour === 12) {
                        targetHour = 0;
                    }
                }

                // Create target datetime
                const targetDateTime = new Date(targetDate);
                targetDateTime.setHours(targetHour, targetMinute, 0, 0);
                const now = new Date();

                if (targetDateTime <= now) {
                    showNotification('Target time must be in the future', 'error');
                    return;
                }

                requestBody = {
                    targetTime: targetDateTime.toISOString(),
                    countingUp: countingUp
                };

                const timeFormat = is24HourFormat
                    ? targetDateTime.toLocaleString('en-US', { hour12: false })
                    : targetDateTime.toLocaleString('en-US', { hour12: true });
                notificationMessage = `Timer started to ${timeFormat}`;
            }

            fetch('/api/start', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(requestBody)
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Failed to start timer');
                }
                return response.json();
            })
            .then(data => {
                if (data.success) {
                    showNotification(notificationMessage);
                }
            })
            .catch(error => {
                showNotification('Error starting timer', 'error');
            });
        }
        
        function pauseTimer() {
            fetch('/api/pause', {
                method: 'POST'
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Failed to pause timer');
                }
                return response.json();
            })
            .then(data => {
                if (data.success) {
                    showNotification('Timer paused');
                }
            })
            .catch(error => {
                showNotification('Error pausing timer', 'error');
            });
        }
        
        function resetTimer() {
            fetch('/api/reset', {
                method: 'POST'
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Failed to reset timer');
                }
                return response.json();
            })
            .then(data => {
                if (data.success) {
                    showNotification('Timer reset');
                }
            })
            .catch(error => {
                showNotification('Error resetting timer', 'error');
            });
        }
        
        // Update status from server every .5 second
        setInterval(updateStatus, 500);

        // Update display every .5 second
        setInterval(updateDisplay, 500);

        // Initial status update
        updateStatus();
        
        // Allow Enter key to start timer
        document.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                startTimer();
            }
        });
        
        // Force refresh when page becomes visible again (screen turns on, tab switches back)
        document.addEventListener('visibilitychange', function() {
            if (!document.hidden) {
                // Reset local timer state to force resync with server
                timerState.localStartTime = null;
                timerState.localRemaining = 0;
                
                // Immediately fetch fresh status from server
                updateStatus();
                
                // Update display right away
                updateDisplay();
            }
        });

        // Current time display functions
        function updateCurrentTime() {
            const now = new Date();
            let hours = now.getHours();
            const minutes = now.getMinutes();
            const seconds = now.getSeconds();
            let ampm = '';

            if (!is24HourFormat) {
                // 12-hour format
                ampm = hours >= 12 ? ' PM' : ' AM';
                hours = hours % 12;
                hours = hours ? hours : 12; // Convert 0 to 12
            }

            const timeString = String(hours).padStart(2, '0') + ':' +
                               String(minutes).padStart(2, '0') + ':' +
                               String(seconds).padStart(2, '0') + ampm;

            currentTimeDisplay.textContent = timeString;
        }

        function updateTargetTimeFormat() {
            const targetHourInput = document.getElementById('targetHour');
            const ampmField = document.getElementById('ampmField');
            const targetAmPmInput = document.getElementById('targetAmPm');

            if (is24HourFormat) {
                // 24-hour format
                targetHourInput.min = 0;
                targetHourInput.max = 23;
                ampmField.style.display = 'none';

                // Convert current value if it was in 12-hour format
                let currentHour = parseInt(targetHourInput.value) || 0;
                if (currentHour >= 1 && currentHour <= 12 && targetAmPmInput) {
                    const ampm = targetAmPmInput.value;
                    if (ampm === 'PM' && currentHour !== 12) {
                        currentHour += 12;
                    } else if (ampm === 'AM' && currentHour === 12) {
                        currentHour = 0;
                    }
                    targetHourInput.value = currentHour;
                }
            } else {
                // 12-hour format
                targetHourInput.min = 1;
                targetHourInput.max = 12;
                ampmField.style.display = 'block';

                // Convert current value if it was in 24-hour format
                let currentHour = parseInt(targetHourInput.value) || 12;
                if (currentHour >= 0 && currentHour <= 23) {
                    const ampm = currentHour >= 12 ? 'PM' : 'AM';
                    currentHour = currentHour % 12;
                    currentHour = currentHour ? currentHour : 12;
                    targetHourInput.value = currentHour;
                    targetAmPmInput.value = ampm;
                }
            }
        }

        function toggleClockFormat() {
            is24HourFormat = !is24HourFormat;
            localStorage.setItem('clockFormat24Hour', is24HourFormat);
            clockFormatBtn.textContent = is24HourFormat ? '24-hour' : '12-hour';
            updateCurrentTime();
            updateTargetTimeFormat();
        }

        // Initialize clock format button and target time format
        clockFormatBtn.textContent = is24HourFormat ? '24-hour' : '12-hour';
        updateTargetTimeFormat();

        // Update current time every second
        updateCurrentTime();
        setInterval(updateCurrentTime, 1000);

        // Add click handlers to preset buttons for visual feedback
        document.querySelectorAll('.preset-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                // Add a quick visual feedback
                this.style.transform = 'scale(0.95)';
                setTimeout(() => {
                    this.style.transform = '';
                }, 150);
            });
        });

        // IP Whitelist Management Functions
        let currentUserIP = '';

        function openWhitelistModal() {
            const modal = document.getElementById('whitelistModal');
            modal.classList.add('show');
            loadWhitelist();
        }

        function closeWhitelistModal() {
            const modal = document.getElementById('whitelistModal');
            modal.classList.remove('show');
        }

        function closeModalOnOutsideClick(event) {
            if (event.target.id === 'whitelistModal') {
                closeWhitelistModal();
            }
        }

        // Close modal on Escape key
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeWhitelistModal();
            }
        });

        let currentWhitelist = [];

        function loadWhitelist() {
            fetch('/api/whitelist')
                .then(response => response.json())
                .then(data => {
                    if (data.whitelist) {
                        currentWhitelist = data.whitelist;
                        displayWhitelist(data.whitelist);
                        currentUserIP = data.your_ip || '';
                        document.getElementById('currentIP').textContent = currentUserIP || 'Unknown';
                        updateQuickActionButtons();
                    }
                })
                .catch(error => {
                    console.error('Error loading whitelist:', error);
                });
        }

        function updateQuickActionButtons() {
            const myIP = currentUserIP;
            const mySubnet = calculateMySubnet();

            const ipExists = currentWhitelist.includes(myIP);
            const subnetExists = mySubnet && currentWhitelist.includes(mySubnet);

            const addMyIPBtn = document.getElementById('addMyIPBtn');
            const addMySubnetBtn = document.getElementById('addMySubnetBtn');

            if (addMyIPBtn) {
                addMyIPBtn.disabled = ipExists;
                if (ipExists) {
                    addMyIPBtn.style.opacity = '0.5';
                    addMyIPBtn.style.cursor = 'not-allowed';
                    addMyIPBtn.title = 'Your IP is already in the whitelist';
                } else {
                    addMyIPBtn.style.opacity = '1';
                    addMyIPBtn.style.cursor = 'pointer';
                    addMyIPBtn.title = 'Add your current IP address to the whitelist';
                }
            }

            if (addMySubnetBtn) {
                addMySubnetBtn.disabled = subnetExists;
                if (subnetExists) {
                    addMySubnetBtn.style.opacity = '0.5';
                    addMySubnetBtn.style.cursor = 'not-allowed';
                    addMySubnetBtn.title = 'Your subnet is already in the whitelist';
                } else {
                    addMySubnetBtn.style.opacity = '1';
                    addMySubnetBtn.style.cursor = 'pointer';
                    addMySubnetBtn.title = 'Add your /24 subnet to the whitelist';
                }
            }
        }

        function addMyIP() {
            if (!currentUserIP) {
                showNotification('Unable to detect your IP address', 'error');
                return;
            }

            // Add the current IP directly
            addIPToWhitelistDirect(currentUserIP);
        }

        function calculateMySubnet() {
            if (!currentUserIP) return null;

            // For IPv4, convert to /24 subnet
            if (currentUserIP.includes('.')) {
                const parts = currentUserIP.split('.');
                if (parts.length === 4) {
                    return `${parts[0]}.${parts[1]}.${parts[2]}.0/24`;
                }
            }
            // For IPv6, use /64 subnet
            else if (currentUserIP.includes(':')) {
                return currentUserIP.includes('/') ? currentUserIP : `${currentUserIP}/64`;
            }

            return null;
        }

        function addMySubnet() {
            const subnet = calculateMySubnet();

            if (!subnet) {
                showNotification('Unable to calculate subnet from your IP', 'error');
                return;
            }

            addIPToWhitelistDirect(subnet);
        }

        function addIPToWhitelistDirect(ip) {
            fetch('/api/whitelist/add', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ ip })
            })
            .then(response => {
                return response.json().then(data => ({ status: response.status, data }));
            })
            .then(({ status, data }) => {
                if (status === 200 && data.success) {
                    showNotification(`Added: ${ip}`, 'success');
                    currentWhitelist = data.whitelist;
                    displayWhitelist(data.whitelist);
                } else {
                    showNotification(data.error || 'Failed to add IP', 'error');
                    console.error('Add IP error:', data.error);
                }
            })
            .catch(error => {
                showNotification('Error adding IP to whitelist', 'error');
                console.error('Network error:', error);
            });
        }

        function displayWhitelist(whitelist) {
            const container = document.getElementById('whitelistEntries');

            if (whitelist.length === 0) {
                container.innerHTML = '<div style="text-align: center; color: #64748b; padding: 20px; font-size: 0.9rem;">No entries in whitelist</div>';
                updateQuickActionButtons();
                return;
            }

            container.innerHTML = whitelist.map(ip => `
                <div style="display: flex; align-items: center; justify-content: space-between; background: #ffffff; border: 2px solid #e2e8f0; border-radius: 10px; padding: 10px 14px; margin-bottom: 8px;">
                    <span style="font-family: 'Inter', monospace; font-weight: 600; color: var(--dark-color); font-size: 0.95rem;">${ip}</span>
                    <button onclick="removeIPFromWhitelist('${ip}')" class="btn btn-reset" style="padding: 6px 12px; font-size: 0.75rem;">Remove</button>
                </div>
            `).join('');

            updateQuickActionButtons();
        }

        function addIPToWhitelist() {
            const ipInput = document.getElementById('newIP');
            const ip = ipInput.value.trim();

            if (!ip) {
                showNotification('Please enter an IP address or subnet', 'error');
                return;
            }

            fetch('/api/whitelist/add', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ ip })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showNotification(`Added: ${ip}`, 'success');
                    ipInput.value = '';
                    currentWhitelist = data.whitelist;
                    displayWhitelist(data.whitelist);
                } else {
                    showNotification(data.error || 'Failed to add IP', 'error');
                }
            })
            .catch(error => {
                showNotification('Error adding IP to whitelist', 'error');
            });
        }

        function removeIPFromWhitelist(ip) {
            if (!confirm(`Remove ${ip} from whitelist?`)) {
                return;
            }

            fetch('/api/whitelist/remove', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ ip })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showNotification(`Removed: ${ip}`, 'success');
                    currentWhitelist = data.whitelist;
                    displayWhitelist(data.whitelist);
                } else {
                    showNotification(data.error || 'Failed to remove IP', 'error');
                }
            })
            .catch(error => {
                showNotification('Error removing IP from whitelist', 'error');
            });
        }

        // Allow Enter key to add IP
        document.addEventListener('DOMContentLoaded', function() {
            const newIPInput = document.getElementById('newIP');
            if (newIPInput) {
                newIPInput.addEventListener('keypress', function(e) {
                    if (e.key === 'Enter') {
                        e.preventDefault();
                        addIPToWhitelist();
                    }
                });
            }
        });

        // Logout function
        function logout() {
            if (!confirm('Are you sure you want to logout?')) {
                return;
            }

            fetch('/api/logout', {
                method: 'POST'
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showNotification('Logged out successfully', 'success');
                    // Close modal and redirect to login
                    closeWhitelistModal();
                    setTimeout(() => {
                        window.location.href = '/control';
                    }, 1000);
                }
            })
            .catch(error => {
                showNotification('Error logging out', 'error');
            });
        }
    </script>
